{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OSMP",
  "version": "0.1.3",
  "identifier": "com.dropicx.osmp",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OSMP - Open Source Music Player",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' https://coverartarchive.org https://musicbrainz.org https://*.archive.org https://github.com https://objects.githubusercontent.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlBRUMzOTlBNEMwM0ZENTcKUldSWC9RTk1tam5zbW16SG9oUTFLdXI3dExiUDE0eDhEbzZHcEJPdzY5Z2xQcStNaUp4Z1dGT2YK",
      "endpoints": [
        "https://github.com/Dropicx/osmp/releases/latest/download/latest.json"
      ]
    }
  }

}
